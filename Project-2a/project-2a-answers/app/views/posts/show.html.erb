<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user %>
</p>

<% if current_user == @post.user %>
  <%= link_to 'Edit', edit_user_post_path(current_user, @post) %> |
  <%= link_to 'Back', user_posts_path(current_user) %>
<% end %>
